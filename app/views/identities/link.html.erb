<% provide(:title, "Linked Accounts")  %>
<div class="jumbotron">
  <h3 class="center">Linked Accounts</h3>
    <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <table class="table table-striped table-condensed games">
        <thead>
          <tr>
            <th class="col-md-2 text-left">Account</th>
            <th class="col-md-5 text-center">Name</th>
            <th class="col-md-2 text-right">Action</th>
          </tr>
        </thead>
        <tbody>
          <% Identity.providers.each do |p| %>
          <tr>
            <td class="text-left"><%= p[0] %></td>
            <td class="text-center"><%= provider_name(p[0], @identities) %></td>
            <td class="text-right"><%= provider_unlink(p[0], @identities) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
