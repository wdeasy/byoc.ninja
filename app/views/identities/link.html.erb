<% provide(:title, "Linked Accounts")  %>
<div class="jumbotron">
  <h3 class="center">Linked Accounts</h3>
    <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <table class="table table-striped table-condensed games">
        <thead>
          <tr>
            <th class="col-md-2 text-left">Account</th>
            <th class="col-md-5 text-center">Name</th>
            <th class="col-md-2 text-right">Action</th>
          </tr>
        </thead>
        <tbody>
          <% Identity.providers.without(:qconbyoc).each do |p| %>
            <tr>
              <td class="text-left"><%= p[0] %></td>
              <td class="text-center"><%= provider_name(p[0], @identities) %></td>
              <td class="text-right"><%= provider_unlink(p[0], @identities) %></td>
            </tr>
          <% end %>
          <% if @seat.present? %>
          <tr>
            <td class="text-left">qconbyoc</td>
            <td class="text-center"><%= @seat %></td>
            <td class="text-right"></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br />
      <% if @seat.present? %>
        <%= button_to("Go to qconbyoc.com", "https://qconbyoc.com?selected=#{@seat}##{@seat}", :method => :get, :class => "btn btn-primary", form: {target: '_new'})%>
      <% else %>
        <%= button_to("Go to qconbyoc.com", "https://qconbyoc.com", :method => :get, :class => "btn btn-primary", form: {target: '_new'})%>
      <% end %>
    </div>
  </div>
</div>
