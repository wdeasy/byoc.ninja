<% provide(:title, "Link your BYOC seat to Discord!")  %>
<div class="jumbotron">
  <% if @invalid.present? %>
    <h3 class="center">Invalid seat!</h3>
  <% elsif @taken.present? %>
    <h3 class="center">Seat is taken by <%= @taken %></h3>
  <% else %>
    <h3 class="center">Link your BYOC seat to your Discord, and more!</h3>
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <br />
        When signing in through Discord, any Steam or Battle.net account that is connected to your Discord with "Display on profile" enabled will also be linked to your BYOC Seat!<br /><br />
        <br />
        <%= button_to("Sign in with Discord!", "/auth/discord?seat=#{@seat}&uid=#{@uid}", :method => :post, :class => "btn btn-primary")%>
      </div>
    </div>
  <% end %>
</div>
