<% provide(:title, "Identities")  %>
<div class="jumbotron">
  <h3 class="center">Identities</h3>

  <table class="table table-striped table-condensed games">
    <thead>
      <tr class="row">
        <th class="col-md-2 text-left">Provider</th>
        <th class="col-md-4 text-center">UID</th>
        <th class="col-md-4 text-center">Name</th>
        <th class="col-md-2 text-right">Enabled</th>
      </tr>
    </thead>
    <tbody>
      <% if @identities.empty? %>
        <tr class="row"><td colspan="4" class="col-md-offset-2 text-center">No Identities Found.</td></tr>
      <% else %>
        <%= render @identities %>
      <% end %>
    </tbody>
  </table>
</div>
