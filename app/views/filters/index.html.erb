<% provide(:title, "Filters List")  %>
<div class="jumbotron">
  <h3 class="center">Filters</h3>

  <table class="table table-striped table-condensed games">
    <thead>
      <tr class="row">
        <th class="col-md-12 text-center">Name</th>
      </tr>
    </thead>
    <tbody>
      <% if @filters.empty? %>
        <tr class="row"><td colspan="3" class="col-md-offset-2 text-center">No Filters Found.</td></tr>
      <% else %>
        <%= render @filters %>
      <% end %>
    </tbody>
  </table>
</div>
