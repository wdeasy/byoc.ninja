<% provide(:title, "New Filter")  %>
<div class="jumbotron">
<h3 class="center">Add Filter</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@filter) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :name %>
	  <%= f.text_field :name, class: 'form-control' %>

	  <%= f.submit "Save changes", class: "btn btn-50 btn-primary pull-left" %>
	  <%= link_to "Back", filters_url, class: "btn btn-50 btn-primary pull-right" %>
	<% end %>
  </div>
</div>
</div>
