<tr>
  <td class="text-left longtext" title="<%= host.game.gameextrainfo %>">
    <% if host.game.gameid.length < 7 %>
      <%= store_link host.game, host.game.gameextrainfo, {:target => "_blank"} %>
    <% else %>
      <%= host.game.gameextrainfo %>
    <% end %> 
  </td>
  <td class="text-center longtext">
    <%= flags(host).html_safe %>
  </td>
  <td class="text-left longtext" title="<%= host.name %>">
    <%= host.name %>
  </td>
  <td class="text-right">
    <%= players(host).html_safe %>
  </td>
  <td class="text-center">
    <div class="dropdown">
    <%= link_to host.users.size, '#', :class => 'dropdown-toggle', :'data-toggle' => 'dropdown' %>
    <ul class="dropdown-menu">
      <% host.users.each do |user| %>
        <li><%= link_to display_name(user), user.profileurl, :target => '_blank' %></li>
      <% end %>
    </ul>
    </div>
  </td>
  <td class="text-left longtext" title="<%= host.map %>">
    <%= host.map %>
  </td>
  <td class="text-right">
    <% if !host.gameserverip.include? "." %>
      <%= link_to "Join Lobby", "steam://joinlobby/#{host.game.gameid}/#{host.lobbysteamid}/#{host.users.first.steamid}" %>
    <% elsif host.lobbysteamid != nil %>
      <%= link_to host.gameserverip, "steam://joinlobby/#{host.game.gameid}/#{host.lobbysteamid}/#{host.users.first.steamid}" %>
    <% else %>
      <%= link_to host.gameserverip, "steam://connect/#{host.gameserverip}" %>
    <% end %>
  </td>
</tr>