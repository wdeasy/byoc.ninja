<% provide(:title, "Edit Game") %>
<div class="jumbotron">

<% if @game.steamid.length < 7 %>
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">  	
	  	<div class="container center"><%= link_to image_tag(@game.full_img), @game.store_link, {:class => "img-responsive", :target => "_blank"} %></div>
	  </div>
	</div>
	<br />
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

	<%= form_for(@game) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :id %>
	  <%= f.text_field :steamid, class: 'form-control', :disabled => true %>

	  <%= f.label :name %>
	  <%= f.text_field :name, class: 'form-control' %>

	  <%= f.submit "Save changes", class: "btn btn-50 btn-primary pull-left" %>
	  <%= link_to "Back", games_url, class: "btn btn-50 btn-primary pull-right" %>
	<% end %>
  </div>
</div>
</div>