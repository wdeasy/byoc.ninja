<% provide(:title, "Contact")  %>
<script>
  $(document).ready(function() {
    document.getElementById("plr").style = "display: none !important;";
    document.getElementById("plr").style = "visibility:hidden !important;";
    document.getElementById("plr").value = "Rockets";
  });
</script>
<div class="jumbotron">
<h3 class="center">Contact</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@contact) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= text_field_tag(:plr, nil, :placeholder => "Quakecon is 4 days of Peace, Love and ...", :class => 'form-control') %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :message %>
      <%= f.text_area :message, class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary pull-left" %>
    <% end %>
  </div>
</div>
</div>
