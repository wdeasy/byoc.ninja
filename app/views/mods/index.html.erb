<% provide(:title, "Mods List")  %>
<div class="jumbotron">
  <h3 class="center">Mods</h3>

  <table class="table table-striped table-condensed games">
    <thead>
      <tr class="row">
        <th class="col-md-4 text-left">Id</th>        
        <th class="col-md-4 text-center">Name</th>
        <th class="col-md-4 text-right">Info</th>
      </tr>
    </thead>
    <tbody>
      <% if @mods.empty? %>
        <tr class="row"><td colspan="3" class="col-md-offset-2 text-center">No mods Found.</td></tr>
      <% else %>
        <%= render @mods %>
      <% end %>              
    </tbody>
  </table>
</div>