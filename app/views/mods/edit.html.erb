<% provide(:title, "Edit Mod") %>
<div class="jumbotron">

<div class="row">
  <div class="col-md-6 col-md-offset-3">

	<%= form_for(@mod) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :id %>
	  <%= f.text_field :id, class: 'form-control', :readonly => true %>

	  <%= f.label :name %>
	  <%= f.text_field :name, class: 'form-control' %>

	  <%= f.label :info %>
	  <%= f.text_field :info, class: 'form-control', :readonly => true %>

	  <%= f.submit "Save changes", class: "btn btn-33 btn-primary pull-left" %>
	  <%= link_to "Delete", @mod, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-33 btn-primary" %>	  
	  <%= link_to "Back", mods_url, class: "btn btn-33 btn-primary pull-right" %>
	<% end %>
  </div>
</div>
</div>