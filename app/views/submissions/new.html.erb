<% provide(:title, "link your seat")  %>
<div class="jumbotron">
<h3 class="center">Link your seat to your steam account</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@submission) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label "Seat" %>
	  <%= f.collection_select :seat_id, @seats, :id, :seat_clan_handle, {:include_blank => true},{:class => 'form-control'} %>

	  <%= f.label "Steam Profile URL" %>
	  <%= f.text_field :url, :placeholder => "http://steamcommunity.com/id/RayArnold", class: 'form-control' %>

	  <%= f.submit "Save changes", class: "btn btn-50 btn-primary pull-left" %>
	  <%= link_to "Back", groups_url, class: "btn btn-50 btn-primary pull-right" %>
	<% end %>
  </div>
</div>
</div>


