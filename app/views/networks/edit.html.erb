<% provide(:title, "Edit Network")  %>
<div class="jumbotron">
<h3 class="center">Edit Network</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

	<%= form_for(@network) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :name %>
	  <%= f.select :name, Network.names.map { |key, value| [key.humanize, key] }, {},{:class => 'form-control'} %>

	  <%= f.label :cidr %>
	  <%= f.text_field :cidr, class: 'form-control' %>

	  <%= f.submit "Save changes", class: "btn btn-33 btn-primary pull-left" %>
	  <%= link_to "Delete", @network, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-33 btn-primary" %>
	  <%= link_to "Back", networks_url, class: "btn btn-33 btn-primary pull-right" %>
	<% end %>
  </div>
</div>
</div>
