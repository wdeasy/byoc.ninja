<% provide(:title, "New Group")  %>
<div class="jumbotron">
<h3 class="center">Add Group</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_tag(groups_auto_path, method: "get") do %>
	  <%= hidden_field :auto, "true" %>
	  <%= text_field_tag(:url, nil, :placeholder => "http://steamcommunity.com/groups/ProPartyPeople", :class => 'form-control') %>
	  <%= submit_tag("Add", class: "btn btn-50 btn-primary pull-left") %>
	  <%= link_to "Back", groups_url, class: "btn btn-50 btn-primary pull-right" %>
	<% end %>
  </div>
</div>
</div>