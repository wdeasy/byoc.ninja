<% provide(:title, "Edit Group")  %>
<div class="jumbotron">
<h3 class="center">Edit Group</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

	<%= form_for(@group) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :id %>
	  <%= f.text_field :groupid64, class: 'form-control', :disabled => true %>

	  <%= f.label :name %>
	  <%= f.text_field :name, class: 'form-control' %>

	  <%= f.label :url %>
	  <%= f.text_field :url, class: 'form-control' %>

	  <%= f.label :enabled %>
	  <%= f.select :enabled, [['yes',true],['no',false]], {},{:class => 'form-control'} %>

	  <%= f.submit "Save", class: "btn btn-33 btn-primary pull-left" %>
	  <%= link_to "Delete", @group, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-33 btn-primary" %>
	  <%= link_to "Back", groups_url, class: "btn btn-33 btn-primary pull-right" %>
	<% end %>
  </div>
</div>
</div>